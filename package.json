{
  "name": "simultaneous-cards-fvtt",
  "version": "0.1.0",
  "type": "module",
  "description": "A system-agnostic Foundry module for the simultaneous choice of a card between all the players and the GM",
  "scripts": {
    "dev": "cross-env NODE_ENV=development gulp build",
    "dev:watch": "cross-env NODE_ENV=development gulp watch",
    "build": "cross-env NODE_ENV=production gulp build",
    "link": "node ./tools/link-project.js",
    "link:force": "node ./tools/link-project.js --force",
    "clean": "gulp clean",
    "bump": "cross-env NODE_ENV=production npm run lint:fix && gulp bump --r",
    "release": "gulp release",
    "lint": "eslint --ext .js .",
    "lint:fix": "eslint --ext .js --fix .",
    "format": "prettier-eslint \"**/*.{hbs,js,json,scss}\" --write",
    "postinstall": "npx husky install && npx patch-package",
    "upd": "npm list -g --depth=0 & npm outdated -g & npm outdated & npx npm-check -u",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fvtt-fria-ligan/simultaneous-cards-fvtt.git"
  },
  "keywords": [
    "Cards",
    "Foundry VTT"
  ],
  "author": "Stefouch",
  "contributors": [],
  "license": "GPLv3",
  "bugs": {
    "url": "https://github.com/fvtt-fria-ligan/simultaneous-cards-fvtt/issues"
  },
  "homepage": "https://github.com/fvtt-fria-ligan/simultaneous-cards-fvtt#readme",
  "devDependencies": {
    "@league-of-foundry-developers/foundry-vtt-types": "^9.280.0",
    "@types/jquery": "3.5.14",
    "@typhonjs-fvtt/eslint-config-foundry.js": "0.8.0",
    "chalk": "^5.2.0",
    "cross-env": "7.0.3",
    "devmoji": "2.3.0",
    "esbuild": "^0.16.10",
    "esbuild-sass-plugin": "^2.4.4",
    "eslint": "^8.30.0",
    "eslint-config-jquery": "^3.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "execa": "^6.1.0",
    "fs-extra-plus": "^0.6.0",
    "gulp": "^4.0.2",
    "gulp-yaml": "2.0.4",
    "husky": "^7.0.4",
    "prettier": "^2.8.1",
    "prettier-eslint-cli": "^7.1.0",
    "semver": "^7.3.8",
    "standard-version": "^9.3.2"
  }
}
